@model DepartamentosMunicipiosMVC.Models.Municipio

@{
    ViewData["Title"] = "Borrar Municipio";
}

<section class="content-header">
    <div class="container-flud">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Eliminar Municipio</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Municipios")">Municipios</a></li>
                    <li class="breadcrumb-item active">Eliminar</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="row">
        <h3>¿Está seguro que desea eliminar el Registro seleccionado?</h3>
        <hr />
    </div>
    <div class="row">
        <div class="col-md-8 offset-md-2 table-responsive">
            <table class="table table-bordered">
                <tr>
                    <th class="col-sm-2">@Html.DisplayNameFor(model => model.Nombre)</th>
                    <td class="col-sm-10">@Html.DisplayFor(model => model.Nombre)</td>
                </tr>
                <tr>
                    <th class="col-sm-2">@Html.DisplayNameFor(model => model.CNRCompleto)</th>
                    <td class="col-sm-10">@Html.DisplayFor(model => model.CNRCompleto)</td>
                </tr>
                <tr>
                    <th class="col-sm-2">@Html.DisplayNameFor(model => model.Latitud)</th>
                    <td class="col-sm-10">@Html.DisplayFor(model => model.Latitud)</td>
                </tr>
                <tr>
                    <th class="col-sm-2">@Html.DisplayNameFor(model => model.Longitud)</th>
                    <td class="col-sm-10">@Html.DisplayFor(model => model.Longitud)</td>
                </tr>
                <tr>
                    <th class="col-sm-2">@Html.DisplayNameFor(model => model.Departamento)</th>
                    <td class="col-sm-10">@Html.DisplayFor(model => model.Departamento.Nombre)</td>
                </tr>
            </table>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Borrar" class="btn btn-danger" /> |
                <a class="btn btn-secondary" asp-action="Index">Regresar</a>
            </form>
        </div>
    </div>
</section>
